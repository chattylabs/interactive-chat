<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LibTheme.Button" parent="android:Widget">
        <item name="android:background">@drawable/btn_default_ripple</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/selector_button</item>
        <!--<item name="android:fontFamily">@font/source_sans_pro_semibold</item>-->
    </style>

    <style name="LibTheme.Text" parent="android:Widget"/>

    <style name="LibTheme.Button.BubbleChat">
        <item name="android:background">@drawable/bubble_button</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="LibTheme.Text.Field" parent="@android:style/Widget.Holo.EditText">
        <item name="android:minWidth">100dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>

</resources>